<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="./js/delete_genre.js"></script>

<!-- genres.hbs -->
<h1>Genres</h1>
<p>View genres  or add a new genre</p>

{{!-- Create a table --}}
<table id="genres-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.genreId}}>
            <td>{{this.genreId}}</td>
            <td>{{this.genreName}}</td>
            <td><button onclick="deleteGenre({{this.genreId}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table  --}}
<h2>Adding a Genre</h2>
<p>To add a new genre, please enter its name below and click 'Submit'!</p>
<form id="add-genre-form">
    <label for="input-genre">Genre: </label>
    <input type="text" name="input-genre" id="input-genre">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_genre.js"></script>