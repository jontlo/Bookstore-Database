<!-- publishers.hbs -->
<h1>Publishers</h1>
<p>A list of publishers whose publication we have / have had in stock</p>

{{!-- Create a table --}}
<table id="publisher-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the publisherId and publisherName, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.publisherId}}</td>
            <td>{{this.publisherName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the publishers table --}}
<h2>Add a new Publisher</h2>
<p>To add a new publisher, please enter their information below and click 'Submit'!</p>
<form id="add-publisher-form">
    <label for="input-pname">Publisher Name: </label>
    <input type="text" name="input-pname" id="input-pname">

    <input type="submit"/>
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_publisher.js"></script>